<% include ../partials/header %>
<div class="jumbotron bg-light"> 
<h1 class="display-3">PRODUCTS LIST</h1>
<input class="form-control btn-danger bg-dark" id="myInput" type="text" placeholder="Search..">  
<br>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Price</th>
            <th>Edit</th>
            <th>Delete</th>
            <th> <a class="btn btn-success" href="/insert" role="button">Insert</a></th>
        </tr>
    </thead>
    <tbody id="myTable">
    <% products.forEach(function(product) { %>
        <tr>
            <td scope="row"><%= product.id %></td>
            <td><%= product.title %></td>
            <td><%= product.price %></td>
            <td>
            <a class="btn btn-warning" href="/products/<%= product.id%>" role="button">Edit</a>
            </td>
            <td>
            <a class="btn btn-danger" href="" role="button">Delete</a>
            </td>
        </tr>
        <% }); %>
    </tbody>
</div>
    <script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>
</table>



