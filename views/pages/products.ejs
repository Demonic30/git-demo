<% include ../partials/header %>
<br>
<div class="jumbotron bg-link "> 
<h1 class="display-5 text-center">PRODUCTS LISTS</h1>
<br>
<table class="table ">
    <thead class="bg-info">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Price</th>
            <th><a class="btn btn-success" href="/insert" role="button">Insert</a></th>
        </tr>
    </thead>
    <tbody id="myTable">
    <% products.forEach(function(product) { %>
        <tr>
            <td scope="row"><%= product.id %></td>
            <td><%= product.title %></td>
            <td><%= product.price %></td>
            <td>
            <a class="btn btn-warning" href="/products/<%= product.id%>" role="button">Edit</a>
            </td>
        </tr>
        <% }); %>
    </tbody>

</table>
</div>

<% include ../partials/footer %>
