<% include ../partials/header %>
<br>
<div class="jumbotron bg-link "> 
<h1 class="display-3">PRODUCTS REPORT</h1>
<input class="form-control btn-danger bg-dark" id="myInput" type="text" placeholder="Search..">  
<br>
<table class="table ">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Price</th>
            <th>Edit</th>
            <th>Delete</th>
            <th></th>
        </tr>
    </thead>
    <tbody id="myTable">
    <% products.forEach(function(product) { %>
        <tr>
            <td scope="row"><%= product.id %></td>
            <td><%= product.title %></td>
            <td><%= product.price %></td>
            <td>
            <a class="btn btn-warning" href="/products/<%= product.id%>" role="button">Edit</a>
            </td>
            <td>
            <a class="btn btn-danger" href="/product_delete/<%=product.id %>" onclick="return confirm('Are You Sure you want to Delete ? Please Confirm this')" role="button">Delete</a>
            </td>
        </tr>
        <% }); %>
    </tbody>

    <script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>
</table>

<% include ../partials/footer %>
</div>